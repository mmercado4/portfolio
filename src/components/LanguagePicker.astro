---
import { getLangFromUrl } from '@i18n/utils';
const lang = getLangFromUrl(Astro.url);
---

<div class="w-7 h-7 flex items-center justify-center overflow-hidden rounded-full border border-transparent">
  {
    lang === 'en' ? (
      <a href="/es" class="rounded-sm scale-[2]">
        <img src="/images/spain.webp" alt="spain-flag" />
      </a>
    ) : (
      <a href="/" class="rounded-sm scale-[2]">
        <img src="/images/usa.jpg" alt="usa-flag" />
      </a>
    )
  }
</div>
