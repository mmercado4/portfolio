---
import Hero from './Hero.astro';
import Header from './Header.astro';
import About from './About.astro';
import Experience from './Experience.astro';
import Education from './Education.astro';
import Skills from './Skills.astro';
import Section from '../layouts/Section.astro';
import Footer from './Footer.astro';
import Projects from './Projects.astro';

import { useTranslations } from '@i18n/utils';
import { getLangFromUrl } from '@i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<main class="container max-w-3xl sm:p-4 p-3 mx-auto">
  <Header />
  <Hero />
  <Section id="about" title={t('About me')} blurDelay={0.3}>
    <About />
  </Section>
  <Section id="experience" title={t('Work experience')} blurDelay={0.5}>
    <Experience />
  </Section>
  <Section id="education" title={t('Education')} blurDelay={0.7}>
    <Education />
  </Section>
  <Section id="skills" title={t('Skills')} blurDelay={0.9}><Skills /></Section>
  <Projects />
</main>
<Footer />
