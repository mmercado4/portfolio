import * as aboutEn from '../content/about/en/about.md';
import * as aboutEs from '../content/about/es/about.md';
---

<div class="text-grey-secondary dark:text-light-grey text-sm">
  {lang === 'en' ? <aboutEn.Content /> : <aboutEs.Content />}
</div>
